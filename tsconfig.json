{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "build",

    "target": "ES2015",
    "declaration": false,
    "sourceMap": false,
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": ["src/**/*.test.tsx", "src/**/*.test.ts"]
}
