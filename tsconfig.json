{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "build",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
  },
  "references": [
    {
      "path": "./examples"
    },
  ]
}
