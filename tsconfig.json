{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "build",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  },
  "exclude": ["src/**/*.test.tsx", "src/**/*.test.ts"],
}
