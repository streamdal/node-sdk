{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./build",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ]
}
